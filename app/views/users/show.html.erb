<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag @user.profile.avatar.url, :class => "avatar-image circle" %>
  </div>
  <div class="col-md-6">
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class="job-title-icon"><%= job_title_icon %></span><%= @user.profile.job_title %></h3>
    <% if  !@user.profile.description.empty? %>
      <h3>Description</h3>
      <div class="well profile-description">
        <%= @user.profile.description %>
      </div>
    <% end %>
    <% if current_user.plan_id == 2 %>
      <h3>Contact Information</h3>
      <div class="well profile-description">
        <i class="fa fa-phone profile-info-icon"></i><%= @user.profile.phone_number %><br/>
        <i class="fa fa-envelope-o profile-info-icon"></i><%= @user.profile.contact_email %><br/>
      </div>
    <% end %>
    <% if current_user.id == @user.id %>
        <div class="text-right">
          <%= link_to "Edit My Profile",  edit_user_profile_path(user_id: current_user.id), class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>